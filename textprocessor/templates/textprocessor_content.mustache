{{!
    @template aiplacement_textprocessor/textprocessor_content

    Simple content for TextProcessor drawer.

    Example context (json):
    {
        "uniqid": "tp_123",
        "ollama_status": true
    }
}}
<div id="textprocessor-ui-{{uniqid}}" class="textprocessor-drawer-content">
    
    <div class="textprocessor-header mb-3">
        <h5>{{#str}}pluginname, aiplacement_textprocessor{{/str}}</h5>
    </div>
    
    {{^ollama_status}}
    <div class="alert alert-warning">
        ‚ö†Ô∏è {{#str}}ollama_not_configured, aiplacement_textprocessor{{/str}}
    </div>
    {{/ollama_status}}
    
    <div class="mb-3">
        <label for="textprocessor-input-{{uniqid}}" class="form-label fw-bold">
            {{#str}}upload_file, aiplacement_textprocessor{{/str}}
        </label>
        <input type="file" 
            id="textprocessor-file-{{uniqid}}"
            class="form-control"
            accept=".pdf,.docx,.doc,.txt,.rtf"
            {{^ollama_status}}disabled{{/ollama_status}}>
        <small class="form-text text-muted">
            {{#str}}supported_files, aiplacement_textprocessor{{/str}}
        </small>
    </div>

    <div class="text-center text-muted mb-2">‚Äî {{#str}}or, core{{/str}} ‚Äî</div>
    
    <div class="mb-3">
        <label for="textprocessor-input-{{uniqid}}" class="form-label fw-bold">
            {{#str}}text_input, aiplacement_textprocessor{{/str}}
        </label>
        <textarea 
            id="textprocessor-input-{{uniqid}}"
            class="form-control textprocessor-input" 
            rows="6"
            placeholder="{{#str}}text_input_placeholder, aiplacement_textprocessor{{/str}}"
            {{^ollama_status}}disabled{{/ollama_status}}></textarea>
    </div>
    
    <div class="mb-3">
        <button class="btn btn-primary textprocessor-process-btn" {{^ollama_status}}disabled{{/ollama_status}}>
            ‚ú® {{#str}}process, aiplacement_textprocessor{{/str}}
        </button>
    </div>
    
    <div class="textprocessor-output-area mb-3">
        <label for="textprocessor-output-{{uniqid}}" class="form-label fw-bold">
            {{#str}}output_label, aiplacement_textprocessor{{/str}}
        </label>
        <textarea 
            id="textprocessor-output-{{uniqid}}"
            class="form-control textprocessor-output" 
            rows="8"
            readonly
            placeholder="{{#str}}output_placeholder, aiplacement_textprocessor{{/str}}"></textarea>
    </div>

    <div class="textprocessor-actions">
        <button class="btn btn-outline-secondary textprocessor-copy-btn" disabled>
            üìã {{#str}}copy, aiplacement_textprocessor{{/str}}
        </button>
    </div>
    
</div>