{{!
    @template aiplacement_textprocessor/editor_dialog

    Simple dialog for TextProcessor - single unified action.

    Context variables:
    * contextid - Context ID

    Example context (json):
    {
        "contextid": 1
    }
}}
<div class="textprocessor-dialog">
    <div class="textprocessor-loading hidden text-center p-3 mb-3">
        <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
        {{#str}}processing, aiplacement_textprocessor{{/str}}
    </div>

    <div class="textprocessor-form">
        <!-- File Upload -->
        <div class="mb-4">
            <label for="textprocessor-file" class="form-label fw-bold">
                {{#str}}upload_file, aiplacement_textprocessor{{/str}}
            </label>
            <input type="file" name="file" id="textprocessor-file" 
                class="form-control"
                accept=".pdf,.docx,.doc,.txt,.rtf">
            <small class="form-text text-muted">
                {{#str}}supported_files, aiplacement_textprocessor{{/str}}
            </small>
        </div>

        <div class="text-center text-muted mb-3">
            — {{#str}}or, core{{/str}} —
        </div>

        <!-- Text Input -->
        <div class="mb-3">
            <label for="textprocessor-text" class="form-label fw-bold">
                {{#str}}text_input, aiplacement_textprocessor{{/str}}
            </label>
            <textarea name="text" id="textprocessor-text" 
                class="form-control" rows="8"
                placeholder="{{#str}}text_input_placeholder, aiplacement_textprocessor{{/str}}"></textarea>
        </div>
    </div>

    <div class="textprocessor-info mt-3 p-3 bg-light rounded">
        <small class="text-muted">
            <strong>{{#str}}process_info_title, aiplacement_textprocessor{{/str}}</strong><br>
            {{#str}}process_info_desc, aiplacement_textprocessor{{/str}}
        </small>
    </div>
</div>