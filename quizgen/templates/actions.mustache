{{!
    @template aiplacement_quizgen/actions

    Template to display AI action button for the quiz generator.
    Uses the standard Moodle AI drawer pattern.

    Context variables required for this template:
    * isdropdown - If this is a dropdown, load the appropriate layout
    * actions - List of actions to generate buttons for

    Example context (json):
    {
        "isdropdown": false,
        "actions": [
            {
                "name": "quizgen",
                "icon": "fa-question-circle",
                "title": "Quiz Generator"
            }
        ]
    }
}}
<div {{#isdropdown}}id="ai-features"{{/isdropdown}}
    class="ai-quizgen-controls py-3">
    {{#isdropdown}}
        <div class="dropdown">
            <button class="btn btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                {{#str}} aifeatures, aiplacement_quizgen {{/str}}
            </button>
            <ul class="dropdown-menu">
                {{#actions}}
                <li>
                    <button class="dropdown-item ai-action" type="button" data-action="{{name}}">
                        <i class="icon fa {{icon}}"></i>
                        {{title}}
                    </button>
                </li>
                {{/actions}}
            </ul>
        </div>
    {{/isdropdown}}
    {{^isdropdown}}
        {{#actions}}
        <button class="btn btn-outline-secondary ai-action" type="button" data-action="{{name}}" aria-controls="ai-drawer" data-input-type="action">
            <i class="icon fa {{icon}}"></i>
            {{title}}
        </button>
        {{/actions}}
    {{/isdropdown}}
    {{> core_message/message_jumpto }}
</div>
